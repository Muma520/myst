<div class="d-flex justify-content-between align-items-center mb-4">
  <%= link_to "Thêm Người dùng", new_user_path, class: "btn btn-primary" %>
</div>

<h1>Danh sách Người dùng</h1>

<p>Số lượng người dùng: <%= @user_count %></p>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 + (@users.current_page - 1) * @users.limit_value %></td>
        <td><%= user.email_address %></td>
        <td>
          <%= link_to 'Sửa', edit_user_path(user), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Xóa', user_path(user), method: :delete, data: { confirm: 'Bạn có chắc chắn muốn xóa người dùng này?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
