<div class="d-flex justify-content-between align-items-center mb-4">
  <%= link_to "Thêm Sản phẩm", new_product_path, class: "btn btn-primary" %>
</div>

<h1>Danh sách Sản phẩm</h1>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Tên sản phẩm</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <td><%= index + 1 + (@products.current_page - 1) * @products.limit_value %></td>
        <td><%= product.name %></td>
        <td>
          <%= link_to 'Sửa', edit_product_path(product), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Xóa', product_path(product), method: :delete, data: { confirm: 'Bạn có chắc chắn muốn xóa sản phẩm này?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %> <!-- Phân trang -->
