<section class="product">
  <% if @product.featured_image.attached? %>
    <%= image_tag @product.featured_image, style: "width: 359px; height: 359px; object-fit: cover;", alt: @product.name %>
  <% end %>

  <section class="product-info">
    <% cache @product do %>
      <h1><%= @product.name %></h1>
      <%= @product.description %>
    <% end %>

    <%= render "inventory", product: @product %>

    <% if authenticated? %>
      <%= link_to "Chỉnh sửa", edit_product_path(@product) %>
      <%= button_to "Xóa", @product, method: :delete, data: { turbo_confirm: "Bạn có chắc không?" } %>
    <% end %>

    <p><%= link_to "Quay lại", products_path %></p>
  </section>
</section>